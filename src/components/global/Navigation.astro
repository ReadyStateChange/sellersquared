---
import { Image } from "astro:assets";
import sellerSquaredImage from "../../assets/images/SellerSquared.svg";
import InterestForm from "./InterestForm.astro";
---

<div class="">
  <div class="px-8 md:px-12 mx-auto max-w-7xl py-2 lg:px-32 text-xs">
    <div
      x-data="{ open: false }"
      class="relative flex flex-col w-full mx-auto rounded-xl md:rounded-full md:items-center md:justify-between md:flex-row"
    >
      <div class="flex flex-row items-center justify-between md:justify-start">
        <a
          class="items-center inline-flex transition-transform duration-300 ease-in-out hover:scale-105 rounded-lg"
          href="/"
        >
          <Image
            src={sellerSquaredImage}
            alt="SellerSquared Logo"
            class="max-h-9 w-auto transition-opacity duration-300 hover:opacity-90"
          />
        </a>
        <button
          @click="open = !open"
          class="inline-flex items-center justify-center p-2 text-black hover:text-blue-500 focus:outline-none focus:text-black md:hidden"
        >
          <svg
            class="w-6 h-6"
            stroke="currentColor"
            fill="none"
            viewBox="0 0 24 24"
          >
            <path
              :class="{'hidden': open, 'inline-flex': !open }"
              class="inline-flex"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
            <path
              :class="{'hidden': !open, 'inline-flex': open }"
              class="hidden"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <nav
        :class="{'flex': open, 'hidden': !open}"
        class="flex-col flex-grow hidden py-12 md:py-0 md:flex md:items-end justify-center md:flex-row"
      >
        <ul
          class="space-y-2 list-none md:space-y-0 md:ml-auto items-center md:inline-flex justify-center text-center md:text-left gap-3"
        >
          <li>
            <a href="/posts" class="text-black hover:text-blue-500">
              Square Seller Tips and Tricks
            </a>
          </li>
          <li class="nav-contact-wrapper">
            <InterestForm buttonText="Contact" />
          </li>
        </ul>
      </nav>
    </div>
  </div>
</div>

<style is:global>
  .nav-contact-wrapper interest-form {
    display: inline-flex;
  }
  .nav-contact-wrapper .interest-trigger {
    padding: 0.375rem 1rem;
    height: 2rem;
    border-radius: 9999px;
    background: black;
    color: white;
    text-decoration: none;
    font-size: inherit;
    transition: all 0.2s;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  .nav-contact-wrapper .interest-trigger:hover {
    background: rgba(0, 0, 0, 0.1);
    color: black;
  }
  .nav-contact-wrapper .interest-trigger.active {
    background: rgba(0, 0, 0, 0.1);
    color: black;
  }
</style>
